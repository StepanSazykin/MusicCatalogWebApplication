@model MusicCatalogWebApplication.Models.Artist

@{
    ViewData["Title"] = "Удалить артиста";
}

<h1>Удалить артиста</h1>

<h3>Вы уверены, что хотите удалить артиста @Model.Name?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Название</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Name)</dd>
        <dt class="col-sm-2">Публичный</dt>
        <dd class="col-sm-10">@(Model.IsPublic ? "Да" : "Нет")</dd>
        <dt class="col-sm-2">Страна</dt>
        <dd class="col-sm-10">@(Model.Country ?? "Не указана")</dd>
        <dt class="col-sm-2">Год создания</dt>
        <dd class="col-sm-10">@(Model.CreationYear?.ToString() ?? "Не указан")</dd>
        <dt class="col-sm-2">Владелец</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Owner.Login)</dd>
    </dl>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="ID" />
        <input type="submit" value="Удалить" class="btn btn-danger" />
        <input type="hidden" name="returnUrl" value="@ViewBag.ReturnUrl" />
        <a href="@(ViewBag.ReturnUrl ?? Url.Action("Index", "Artists"))" class="btn btn-secondary">Назад</a>
    </form>
</div>